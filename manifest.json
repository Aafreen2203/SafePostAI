{
  "manifest_version": 3,
  "name": "SafePost AI",
  "version": "1.0",
  "description": "AI-powered privacy protection for social media",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["api/ai-privacy-analyzer.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SafePost AI"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js", "api/*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
